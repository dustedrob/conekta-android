<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" 
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#111"
              android:gravity="center">

    
    <ImageView android:layout_width="wrap_content"
               android:id="@+id/logo"
               android:src="@drawable/logo"
               android:layout_height="wrap_content"
               android:scaleType="centerInside">
    </ImageView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal" 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
    >          
        <Button android:id="@+id/button_bank_charge_async"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_charge_async"
        />
    
    </LinearLayout>
       
    <TextView android:id="@+id/txt_service_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#fff"
    />
    
    <TextView android:id="@+id/txt_service_number"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#fff"
    />
    
    <TextView android:id="@+id/txt_type"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#fff"
    />
    
    <TextView android:id="@+id/txt_reference"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#fff"
    />
    
</LinearLayout>